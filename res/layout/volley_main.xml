<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="vertical">

 
	    
	    <Button 
	        android:id="@+id/volley_get_string"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center"
	        android:text="获取字符串"
	        />
	    
	    
	    <Button 
	        android:id="@+id/volley_get_params"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center"
	        android:text="post 携带参数获取"
	        />
	    
	    <Button 
	        android:id="@+id/volley_get_url"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center"
	        android:text="Get 通过Url获取"
	        />
	    
	     <Button 
	        android:id="@+id/volley_get_img"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center"
	        android:text="set Img"
	        />
	    
	     <LinearLayout 
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:orientation="horizontal"
	         android:layout_gravity="center_horizontal"
	         >
		    <ImageView 
		        android:id="@+id/img_volley"
		        android:layout_width="100dp"
		        android:layout_height="100dp"
		        android:layout_gravity="center_horizontal"
		        />
		    
		    <!-- Volley下图片控件 -->
		    <com.android.volley.toolbox.NetworkImageView   
		        android:id="@+id/network_image_view"  
		        android:layout_width="100dp"  
		        android:layout_height="100dp"  
		        android:layout_gravity="center_horizontal"  
		        />  
		</LinearLayout>
		
</LinearLayout>

